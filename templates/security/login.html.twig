{% extends 'base.html.twig' %}

{% block title %}Connexion | {{ parent() }}{% endblock %}

{% block body %}

    <section class="p-3 p-lg-5">
        <form method="post">
            {% if error %}
                {{ component('alert', {
                    'type': 'danger',
                    'message': error.messageKey|trans(error.messageData, 'security'),
                    'dismissible': false
                }) }}
            {% endif %}

            <h1 class="h3 mb-3 fw-bold text-uppercase">Connexion</h1>
            <div class="mb-3">
                <label  for="inputUsername"
                        class="form-label">Pseudo</label>
                <input  type="text" 
                        value="{{ last_username }}" 
                        name="username" 
                        id="inputUsername" 
                        class="form-control scale" 
                        autocomplete="username" required autofocus>
            </div>

            <div class="mb-3">
                <label  class="form-label"
                        for="inputPassword">Mot de passe</label>
                <input  type="password" 
                        name="password" 
                        id="inputPassword" 
                        class="form-control scale" 
                        autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn scale btn-primary" type="submit">Connexion</button>
        </form>

        <div class="mt-4">
            <p class="mb-2">Pas encore de compte ? <a href="{{ path('user.register') }}">Inscription</a></p>
            <p class="mb-0">Vous avez <a href="{{ path('user.forget.password') }}">oubli√© votre mot de passe</a> ?</p>
        </div>
    </section>

{% endblock %}
