<div class="glide">
    <section class="glide__track mb-5" data-glide-el="track">

        <ul class="glide__slides">
            {% for media in trick.gallery %}

                <li class="glide__slide">
                    {% if instanceOf(media, "App\\Entity\\Image") %}
                        <img class="img-fluid" src="{{ asset('images/trick/' ~ media.path) }}" />
                    {% endif %}

                    {% if instanceOf(media, "App\\Entity\\Video") %}
                        {{ media.path | raw }}
                    {% endif %}
                </li>

            {% endfor %}
        </ul>

    {% if trick.gallery|length != 1 %}
        <div class="mt-3 d-flex justify-content-between align-items-center">
            <div class="glide__arrows p-2" data-glide-el="controls">
                <button class="glide__arrow glide__arrow--left btn btn-sm btn-primary scale" data-glide-dir="<">prev</button>
                <button class="glide__arrow glide__arrow--right btn btn-sm btn-primary scale" data-glide-dir=">">next</button>
            </div>

            <div class="glide__bullets" data-glide-el="controls[nav]">
                {% for i in 1.. trick.gallery|length %}
                    <button class="glide__bullet" data-glide-dir="={{ i - 1 }}"></button>
                {% endfor %}
            </div>
        </div>
    {% endif %}

    </section>
</div>