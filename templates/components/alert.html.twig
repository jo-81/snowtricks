<div{{ attributes }}>
    <div class="{{ html_classes("alert alert-"~type, {
        "alert-dismissible fade show": dismissible
    }) }}" role="alert">
        {{ message }}
        {% if dismissible %}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        {% endif %}
    </div>
</div>
