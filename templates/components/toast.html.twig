<div{{ attributes.defaults({class: "toast-container position-fixed bottom-0 end-0 p-3"}) }}>
    <div id="liveToast" class="toast show text-bg-{{ type }} p-2" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex align-items-center justify-content-between">
            <div class="toast-body">
                {{ message }}
            </div>
            <button type="button" class="btn-close me-2" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>
